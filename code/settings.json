{
    /* -------------------------- CUSTOM USER SETTINGS -------------------------- */
    
    // ----- PYTHON -----
    "python.terminal.activateEnvironment": false,   // My venv is enabled in my .bashrc, set it to true if you do not load your venv before
    "autoDocstring.docstringFormat": "one-line-sphinx",

    // ----- FILES -----
    "files.autoSave": "afterDelay",                 // Auto save active
    "files.associations": {                         // Some file lint
        "*.include": "shellscript",
        "*.log": "log",
        "*.toml": "toml",
        "*.env.template": "env"
    },
    "files.exclude": {                              // Hide folders/files from the explorer
        ".venv/": true,
        "**/__init__.py": true,
        "**/__pycache__": true,
        "**/.git": false,
        "**/environment": true
    },
    
    // ----- FONTS -----
    "editor.fontFamily": "'Iosevka Nerd Font Mono', monospace",         // https://www.nerdfonts.com/font-downloads (Ioveska or JetBrains)
    "editor.fontLigatures": true,
    "terminal.integrated.fontFamily": "IosevkaTerm Nerd Font Mono",
    "terminal.integrated.fontLigatures.enabled": true,
    
    // ----- GIT -----
    "diffEditor.diffAlgorithm": "advanced",                             // https://x.com/notparbez/status/1951422361724436667
    "diffEditor.experimental.showMoves": true,
    "git.enableSmartCommit": true,                  // Stash all change before commit auto (+probably other stuff)
    "git.confirmSync": false,

    // ----- GUI -----
    "workbench.sideBar.location": "right",

    // ----- JUPYTER -----
    "notebook.lineNumbers": "on",

    // ----- EDITOR -----
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "terminal.integrated.suggest.enabled": false,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Vitesse Dark",
    "workbench.colorCustomizations": {
        "[Vitesse Dark]": {
            // --- FIX 1: Make menu selections visible ---
            // Color of the item currently selected in Command Palette/Menus
            "quickInputList.focusBackground": "#363636",
            "quickInputList.focusForeground": "#ffffff",
            // Color of items in the file explorer when you click them
            "list.activeSelectionBackground": "#363636",
            "list.hoverBackground": "#262626",

            // --- FIX 2: Add borders to separate window sections ---
            // Border between the file tree and the code
            "sideBar.border": "#333333",
            // Border between the activity icons (left) and file tree
            "activityBar.border": "#333333",
            // Border around the whole VS Code window (if supported by OS)
            "window.activeBorder": "#444444",
            // Border between split code panes
            "editorGroup.border": "#333333"
        }
    },

    // ----- AI -----
    "geminicodeassist.enableTelemetry": false,


    /* ----------------------- END OF CUSTOM USER SETTINGS ---------------------- */


    "workbench.startupEditor": "none"

}
